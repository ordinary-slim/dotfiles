#!/usr/bin/bash
lock="ðŸ”’ Lock"
suspend="ðŸŒ™ Suspend"
reboot="ðŸ”„ Reboot"
poweroff="ðŸ’€ Poweroff"
logout="ðŸšª Logout"
entries="$lock\n$suspend\n$reboot\n$poweroff\n$logout"

choice=$(printf "%b" "$entries" | rofi -dmenu -p "Power:")
case "$choice" in
  $lock)     hyprlock ;;
  $suspend)  systemctl suspend ;;
  $reboot)   systemctl reboot ;;
  $poweroff) systemctl poweroff ;;
  $logout)   hyprctl dispatch exit ;;
esac
